<script>
const noBtn=document.getElementById('no');
noBtn.onmouseover=()=>{noBtn.style.left=Math.random()*80+'%';noBtn.style.top=Math.random()*80+'%'};

function rainRoses(){
    for(let i=0;i<35;i++){
        let r=document.createElement('div');
        r.innerHTML='üåπ';
        r.style.position='fixed';
        r.style.left=Math.random()*100+'%';
        r.style.top='-40px';
        r.style.fontSize=(20+Math.random()*20)+'px';
        r.style.animation=`roseFall ${3+Math.random()*2}s linear`;
        document.body.appendChild(r);
        setTimeout(()=>r.remove(),5000);
    }
}

function heartBeat(){
    if(navigator.vibrate) navigator.vibrate([150,100,150,100,200]);
}

document.getElementById('yes').onclick=()=>{
    heartBeat();
    document.getElementById('music').play();
    rainRoses();
    setTimeout(()=>{
        card.style.display='none';
        envelopePage.style.display='flex';
    },1200);
};

function openLetter(){
    envelopePage.style.display='none';
    letterPage.style.display='block';
}

function fireworks(){
    for(let i=0;i<25;i++){
        let f=document.createElement('div');
        f.className='firework';
        f.innerHTML='üéá';
        f.style.left=Math.random()*100+'%';
        f.style.top=Math.random()*50+'%';
        document.body.appendChild(f);
        setTimeout(()=>f.remove(),1500);
    }
}

function showPhotos(){
    letterPage.style.display='none';
    photos.style.display='block';
    fireworks();
}
</script>

